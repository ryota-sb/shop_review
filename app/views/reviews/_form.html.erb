<p class="is-size-4 mb-3">Create Review</p>

<% if review.errors.any? %>
  <div class="notification is-danger">
    <h2><%= review.errors.count %></h2>
    <ul>
      <% review.errors.full_messages.each do |message| %>
        <li><% message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="rating-box mt-3">
  <%= form_with model: review, url: shop_reviews_path(shop), local: true do |f| %>
    <div class="main-rating">
      <div class="ratings mb-3">
        <span class="fa fa-star-o" id="star"></span>
        <span class="fa fa-star-o" id="star"></span>
        <span class="fa fa-star-o" id="star"></span>
        <span class="fa fa-star-o" id="star"></span>
        <span class="fa fa-star-o" id="star"></span>
      </div>
      <div class="ml-3 rating-value-display">
        <span id="rating-value-display">0</span>
        /5
      </div>
    </div>
    <%= f.hidden_field :shop_id, value: shop.id %>
    <%= f.hidden_field :score, id: "rating-value" %>

    <%= f.text_field :content, class: "textarea" %>
    <%= f.submit "Save", class: "button mt-3" %>
    <%= link_to "Other Reviews", shop_reviews_path(shop), class: "button light ml-3 mt-3" %>
  <% end %>
</div>

<%= javascript_include_tag "reviews.js" %>